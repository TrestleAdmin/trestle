<% if tabs.size > 0 || render_sidebar_as_tab? -%>
  <ul class="nav nav-tabs">
    <% tabs.each do |name, tab| %>
      <li class="nav-item <%= "active" if name == tabs.keys.first %>">
        <%= link_to tab.label, "##{tab.id(("modal" if dialog_request?))}", class: "nav-link", role: "tab", data: { toggle: "tab" } %>
      </li>
    <% end %>

    <% if render_sidebar_as_tab? %>
      <li class="nav-item align-right">
        <%= link_to icon("fa fa-list-alt"), "#tab-sidebar", class: "nav-link", role: "tab", data: { toggle: "tab" } %>
      </li>
    <% end %>
  </ul>
<% end %>
