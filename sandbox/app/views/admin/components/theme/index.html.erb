<% content_for(:title, "Components: Theme") %>

<% toolbar(:primary) do %>
  <%= color_field_tag :theme, "", class: "color-swatch", data: { controller: "theme", action: "input->theme#update", theme_variable_value: "primary" } %>
  <%= color_field_tag :theme, "", class: "color-swatch ms-2", data: { controller: "theme", action: "input->theme#update", theme_variable_value: "secondary" } %>
<% end %>

<%= render layout: "layout", locals: { wrapper: false } do %>
  <%= row do %>
    <%= col(xl: 6) do %>
      <%= render "typography" %>
      <%= render "buttons" %>
      <%= render "badges" %>
      <%= render "backgrounds" %>
      <%= render "accordion" %>
    <% end %>

    <%= col(xl: 6) do %>
      <%= render "fields" %>
      <%= render "alerts" %>
      <%= render "table" %>
      <%= render "modal" %>
    <% end %>
  <% end %>
<% end %>
